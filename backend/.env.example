# 应用配置
APP_NAME="Stock Agent Pro"
APP_VERSION="2.0.0"
ENVIRONMENT=development  # development, production, testing
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# 数据库配置
DATABASE_URL=sqlite:///./stock_agent.db
# DATABASE_URL=postgresql://user:password@localhost:5432/stock_agent
# DATABASE_URL=mysql://user:password@localhost:3306/stock_agent
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis配置（可选）
# REDIS_URL=redis://localhost:6379/0
# REDIS_ENABLED=false

# JWT认证配置
SECRET_KEY=your-secret-key-change-in-production-please-use-a-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI模型配置
AI_API_KEY=your-api-key-here
AI_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
AI_MODEL=doubao-seed-1-6-251015
AI_FLASH_MODEL=doubao-seed-1-6-flash
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TIMEOUT=60

# 会话配置
MAX_CONVERSATION_HISTORY=50
CONVERSATION_TIMEOUT_MINUTES=30
MAX_ACTIVE_AGENTS_PER_USER=5

# 文件存储
FILES_DIR=./files
MAX_FILE_SIZE_MB=10

# 日志配置
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_FILE=./logs/app.log

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# 监控配置
METRICS_ENABLED=true
# SENTRY_DSN=your-sentry-dsn-here
